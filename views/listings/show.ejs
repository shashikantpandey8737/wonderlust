<% layout("/layouts/boilerplate.ejs") %>
<div class="row">
    <div class="col-8 offset-2">
        <h3>Listing Details</h3>
    </div>
    <div class="card col-6 offset-2 show-card">
        <img src="<%= listing.image %>>" class="card-img-top" alt="listing_image" class="card-img-top show-img">
        <div class="card-body">
          <p class="card-text">

            <b>  <%= listing.title %></b><br>
            <%= listing.description %><br>
            &#8377;<%= listing.price.toLocaleString("en-IN")  %>/night<br>
            <%= listing.country %><br>
            <%= listing.location %><br>
            
          </p>
        </div>
      </div>



    <br>
    <div class="btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-2 edit-btn">Edit </a>
   

<form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
    <button class="btn btn-dark  offset-4 ">Delete</button>
    
   
</form>
</div>
</div>

